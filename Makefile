ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  GLFW_config = debug
  Glad_config = debug
  ImGui_config = debug
  Box2D_config = debug
  yaml_cpp_config = debug
  Stengine_config = debug
  FluidSim_config = debug
